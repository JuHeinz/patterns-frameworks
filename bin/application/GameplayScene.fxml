<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GameplaySceneController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="49.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="aBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="79.0" text="A" />
            <Button fx:id="sBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="76.0" text="S" />
            <Button fx:id="dBtn" mnemonicParsing="false" prefHeight="26.0" prefWidth="71.0" text="D" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <Button fx:id="startGameButton" mnemonicParsing="false" text="Start Song" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
